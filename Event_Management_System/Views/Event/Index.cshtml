@model IEnumerable<Event_Management_System.Models.Event_Tbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Mst.cshtml";
}



<div class="row mt-5">
    <div class="col-md-6">
        <h3>Event Details</h3>
    </div>
    <div class="col-md-6 text-end">
        <a href="/Event/Add" class="btn btn-primary">Add New</a>
    </div>
</div>

<table class="table table-bordered">
    <tr>
        <th>

        @Html.DisplayNameFor(model => model.EventMaster_Tbl.Event_Name)
