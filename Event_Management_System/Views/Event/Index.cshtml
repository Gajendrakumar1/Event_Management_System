        <td>
            @Html.DisplayFor(modelItem => item.Event_FromTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Event_ToTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceperSeat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.maxSeatbookperuser)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>*@


        @*<td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Event_Id }) |
