        <th>
            @Html.DisplayName("To Date")
            @*@Html.DisplayNameFor(model => model.Event_ToDate)*@
        </th>
        <th>
            @Html.DisplayName("From Time")
            @*@Html.DisplayNameFor(model => model.Event_FromTime)*@
        </th>
        <th>
            @Html.DisplayName("To Time")
            @*@Html.DisplayNameFor(model => model.Event_ToTime)*@
        </th>
        <th>
            @Html.DisplayName("Price/Seat")
            @*@Html.DisplayNameFor(model => model.PriceperSeat)*@
        </th>
        <th>
            @Html.DisplayName("Seatbook/user")
                @*@Html.DisplayNameFor(model => model.maxSeatbookperuser)*@
            </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Price)
            </th>*@
        @*<th>Action</th>*@
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EventMaster_Tbl.Event_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventLocationMaster_Tbl.Location)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Event_FromDate)

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Event_ToDate)
