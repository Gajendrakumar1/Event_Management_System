<script>
    $(document).ready(function () {
        $('#ddlPeriod').change(function () {
            var selectedValue = $(this).val();
            if (selectedValue === 'Trial-Period') {
                $('#subscriptionTypeContainer').hide();
                $('#dateContainer').hide();
                $('#endDateContainer').hide();
                // Clear the subscription dropdown selection
                $('#ddlSubscription').val("0"); // Set to the default value
                
                $('#trial').show();
                var today = new Date();
                var startDate = formatDate(today);
                $('#startDate').val(startDate);
               // var endDate = addBusinessDays(today, 7); // Add 5 business days (week excluding weekends)
               // var endDate1 = formatDate(endDate);
                //  $('#endDate').val(endDate1);
                today.setDate(today.getDate() + 7); // Add 1 week
                var endDate = formatDate(today);
                $('#endDate').val(endDate);
                $('#dateContainer').show();
                $('#endDateContainer').show();
            } else if (selectedValue === 'Subscription') {

                $('#subscriptionTypeContainer').show();
                $('#trial').hide();
            } else {
                $('#dateContainer').hide();
                $('#endDateContainer').hide();
                $('#subscriptionTypeContainer').hide(); // Optionally hide for other selections
                // Clear the subscription dropdown selection
                $('#ddlSubscription').val("0"); // Set to the default value
                $('#trial').hide();
            }
        });

    $('#ddlSubscription').change(function () {
        var selectedValue = $(this).val();
        if (selectedValue != 0) {


            var today = new Date();
            //var startDate = today.toISOString().split('T')[0]; // Format YYYY-MM-DD
            var startDate = formatDate(today);
            $('#startDate').val(startDate);

            if (selectedValue === 'Monthly') {
                today.setMonth(today.getMonth() + 1);
            } else if (selectedValue === 'Quarterly') {
                today.setMonth(today.getMonth() + 3);
            } else if (selectedValue === 'Half-Yearly') {
                today.setMonth(today.getMonth() + 6);
            } else if (selectedValue === 'Annual') {
                today.setFullYear(today.getFullYear() + 1);
            } else {
                return;
            }

            // var endDate = today.toISOString().split('T')[0]; // Format YYYY-MM-DD
            var endDate = formatDate(today);
            $('#endDate').val(endDate);
            $('#dateContainer').show();
            $('#endDateContainer').show();
        }
        else {
            $('#startDate').val('');
            $('#endDate').val('');
            $('#dateContainer').hide();
            $('#endDateContainer').hide();
        }
        });

        function formatDate(date) {
            var day = String(date.getDate()).padStart(2, '0');
            var month = String(date.getMonth() + 1).padStart(2, '0'); // Months are zero-based
            var year = date.getFullYear();
            return day + '/' + month + '/' + year; // Format as dd/MM/yyyy
        }   
        function addBusinessDays(startDate, days) {
            var date = new Date(startDate);
            var addedDays = 0;
            while (addedDays < days) {
                date.setDate(date.getDate() + 1);
                // Check if the day is a weekday (Monday to Friday)
                if (date.getDay() !== 0 && date.getDay() !== 6) { // 0 = Sunday, 6 = Saturday
                    addedDays++;
                }
            }
            return date;
        }
});
    </script>
