@model List<Event_Management_System.Models.Semester_Tbl> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Mst.cshtml";
}

<div class="row mt-5">
    <div class="col-md-6">
        <h3>Semester Details</h3>
    </div>
    <div class="col-md-6 text-end">
        <a href="/Semester/Add" class="btn btn-primary">Add New</a>
    </div>
</div>

<table class="table table-bordered">
    <tr>
        <th>Sem Id</th>
        <th>Sem_Name</th>
        @*<th>Created Date</th>
        <th>Created By</th>*@
        <th>Action</th>
    </tr>
        
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@Model[i].Sem_id</td>
            <td>@Model[i].Sem_Name</td>
            @*<td>@Model[i].Created_Date</td>
            <td>@Model[i].Created_by</td>*@
            <td>
                <a href="/Semester/Edit?Id=@Model[i].Sem_id">Edit</a>
                <a href="/Semester/Remove?Id=@Model[i].Sem_id">Delete</a>
            </td>
        </tr>
    }
</table>