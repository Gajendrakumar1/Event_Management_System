@model Event_Management_System.Models.SeatEvtLocVM
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Mst.cshtml";
}

<h2>Add Seat</h2>

@using (Html.BeginForm("AddSeat", "Seat", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-6">
            <label>Event Name</label>
            @Html.DropDownListFor(x => x.Event_Id, ViewBag.EvtMstData as SelectList,"--Select Event--", new { @class = "form-control" })
        </div>
        <div class="col-md-6">
            <label>Location</label>
            @Html.DropDownListFor(x => x.EventLoc_ID, ViewBag.LocData as SelectList,"--Select Location--", new { @class = "form-control" })
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label>Seat Name</label>
            @Html.TextBoxFor(x => x.Seat_Name, new { @class = "form-control" })
        </div>
        <div class="col-md-6">
            <label>Seat Row</label>
            @Html.TextBoxFor(x => x.Seat_row, new { @class = "form-control" })
        </div>
    </div>

    <div class="row">
        <div class="col-md-7">

        </div>
        <div class="col-md-5">
            <input type="submit" value="Save" class="btn btn-success mt-3" />
            <a href="/Seat/Index" class="btn btn-secondary mt-3">Back</a>
        </div>
    </div>
}

