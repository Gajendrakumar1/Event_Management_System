@model Event_Management_System.Models.SeatEvtLocVM
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Mst.cshtml";
}

<h2>Add Seat</h2>

@using (Html.BeginForm("UpdateSeat", "Seat", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Seat_id)
    <div class="row">
        <div class="col-md-6">
            <label>Event Name</label>
            @Html.DropDownList("Event_Id", ViewBag.EvtMstData as SelectList, "--Select Event--", new { @class = "form-control" })
        </div>
        <div class="col-md-6">
            <label>Location</label>
            @Html.DropDownList("EventLoc_ID", ViewBag.LocData as SelectList, "--Select Location--", new { @class = "form-control" })
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label>Seat Name</label>
            @Html.TextBoxFor(x => x.Seat_Name, new { @class = "form-control" })
        </div>
        <div class="col-md-6">
            <label>Seat Row</label>
            @Html.TextBoxFor(x => x.Seat_row, new { @class = "form-control" })
        </div>
    </div>

    <div class="row">
        <div class="col-md-7">

        </div>
        <div class="col-md-5">
            <input type="submit" value="Update" class="btn btn-success mt-3" />
            <a href="/Seat/Index" class="btn btn-secondary mt-3">Back</a>
        </div>
    </div>
   
}





